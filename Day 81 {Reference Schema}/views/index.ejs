<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Homepage | Node App</title>
    </head>
    <body>
        <%- include("nav")%>
        <h1>This is HomePage</h1>
        <ul>
            <% users.forEach(user => { %>
            <!--  -->
            <li>
                <%= user.name %> | <a href="/delete/<%= user._id %>">❌</a> |
                <a href="/update/<%= user._id%>">✏️</a> |
                <a href="/post/create/<%= user._id%>">➕</a>
            </li>
            <!--  -->
            <% }) %>
        </ul>
    </body>
</html>
